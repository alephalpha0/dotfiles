LP_PS1_FILE=~/.config/zsh/liquidprompt.aa0.ps1

### GEN BEHAVIOR

# battery % is displayed if under this threshhold
 LP_BATTERY_THRESHOLD=60
# CPU load avg over past minute.
 LP_LOAD_THRESHOLD=100
# CPU temp displayed if over this threshold in celsius
 LP_TEMP_THRESHOLD=60
# shorten path? NO!
 LP_ENABLE_SHORTEN_PATH=0
# maximum % of screen path should take up
 LP_PATH_LENGTH=90
# # of dirs to keep when shortening
 LP_PATH_KEEP=4
# show  hostname always? 0 is no when not connected remote
# 1 is always -1 is never
 LP_HOSTNAME_ALWAYS=0
# use FQN instead of short host?
 LP_ENABLE_FQN=0
# show the current user name?
 LP_USER_ALWAYS=0
# show % with cpu load and battery imgs?
 LP_PERCENTS_ALWAYS=0

